@model IEnumerable<Livros_Prova.Models.livros>

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem</h1>

<p>
    <a class="btn btn-primary btn-icon-split" asp-action="Create">
        <span class="icon text-white">
            <i class="fas fa-plus-circle"></i>
        </span>
        <span class="text text-white">Adicionar</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantPag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.editora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datalancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantPag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.editora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datalancamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.preco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
